{%- comment -%}
Test section

Renders a simple H2 using the `heading` text setting. Includes schema with a text
setting and several presets so the section is available in the theme customizer.
{%- endcomment -%}

<section id="section-{{ section.id }}" class="test-section">
	{% if section.settings.heading != blank %}
		<h3 class="test-section__heading">{{ section.settings.heading | escape }}</h3>
	{% else %}
		<h2 class="test-section__heading">{{ 'Add a heading in section settings' }}</h2>
	{% endif %}
</section>

{% schema %}
{
	"name": "Test Section",
	"tag": "section",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Your heading here"
		}
	],
	"presets": [
		{
			"name": "Default",
			"category": "Text"
		},
		{
			"name": "Hero heading",
			"category": "Text",
			"settings": {
				"heading": "Welcome to our store"
			}
		},
		{
			"name": "Sale banner",
			"category": "Announcement",
			"settings": {
				"heading": "Limited time sale â€” 50% off"
			}
		}
	]
}
{% endschema %}

